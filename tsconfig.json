{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2021", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowJs": true,
        "strictNullChecks": false,
        "newLine": "LF",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "isolatedModules": false,
        "pretty": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "paths": {
            "@kimcalc/*": ["packages/*/src"],
            "@/*": ["*"]
        }
    },
    "include": ["packages/*/src/**/*.ts", "bun.d.ts"],
    "exclude": ["node_modules", "dist", "packages/**/archive/**/*", "packages/**/test/**/*", "tests/**/*", "**/*.test.ts", "**/*.spec.ts"],
    "typedocOptions": {
        "entryPoints": ["packages/*/src/index.ts"],
        "out": "docs",
        "exclude": ["**/node_modules/**"],
        "modifierTags": ["@alias"]
    }
}
